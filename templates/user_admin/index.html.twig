{% extends 'base.html.twig' %}

{% block title %}Back Office - Centre de gestion des Gaspi Hunters{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <a class="navbar-brand" href="{{ path ('superhero_home') }}">Home</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="{{ path ('superhero_home') }}">Gaspi Hunters<span class="sr-only">(current)</span></a>

        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path ('superhero_product') }}">Les produits à sauver</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path ('app_logout') }}">Deconnexion</a>
        </li>
      </ul>
    </div>
  </nav>
<div class="container mb-4" >
<a href=""><button type="button" class="btn btn-primary btn-lg backgreen">Ajouter un Gaspi Hunter</button>
</a>
</div>
<div class="container">

    <table class="table table-striped table-dark backgreen">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Email</th>
            <th scope="col">Prénom</th>
            <th scope="col">Pseudo</th>
            <th scope="col">Ville</th>
            <th scope="col">Nom d'utilisateur</th>
            <th scope="col">Créé le</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <a href="">
          <tr>
            <th scope="row">{{ user.id}}</th>
            <td>{{ user.email }}</td>
            <td>{{ user.name }}</td>
            <td>{{ user.pseudo}}</td>
            <td>{{ user.city}}</td>
            <td>{{ user.username}}</td>
            <td>{{ user.createdAt | date("d/m/Y") }}</td>


            <th <a href="{{ path('user_show', {'id': user.id}) }}"><button type="button">Examiner</button></th>
            <th <a href="{{ path('user_edit', {'id': user.id}) }}"><button type="button">Modifier</button></th>
            <th <a href="{{ path('user_delete', {'id': user.id}) }}"><button type="button">Supprimer</button></th>
          </tr>
        </a>
          {% endfor %}
        </tbody>
      </table>
</div>
{% endblock %}
