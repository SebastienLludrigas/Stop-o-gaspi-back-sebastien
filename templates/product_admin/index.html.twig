{% extends 'base.html.twig' %}

{% block title %}Back Office - Centre de gestion des Gaspi Hunters{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <a class="navbar-brand" href="{{ path ('superhero_home') }}">Home</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="{{ path ('superhero_home') }}">Gaspi Hunters<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path ('superhero_product') }}">Les produits à sauver</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path ('app_logout') }}">Deconnexion</a>
        </li>
      </ul>
    </div>
  </nav>
<div class="container mb-4" >
<a href=""><button type="button" class="btn btn-primary btn-lg backgreen">Ajouter un produit à sauver</button>
</a>
</div>

<div class="container">
    <table class="table table-striped table-dark backgreen">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">id du Gaspi hunter</th>
            <th scope="col">Nom</th>
            <th scope="col">Date d'expiration</th>
            <th scope="col">Date d'élaboration</th>
            <th scope="col">Expiré</th>
            <th scope="col">Créé le</th>
            <th scope="col">Code barre</th>
            <th scope="col">Ingrédients</th>
            <th scope="col">Quantity</th>
            <th scope="col">Favori</th>
            <th scope="col">Archivé</th>
          </tr>	
        </thead>
        <tbody>
            {% for product in products %}
          <tr>
            <th scope="row">{{ product.id}}</th>
            <td>{{ product.user.id }}</td>
            <td>{{ product.name }}</td>
            <td>{{ product.expirationDate | date("d/m/Y") }}</td>
            <td>{{ product.elaborationDate | date("d/m/Y") }}</td>
            <td>{{ product.expirated}}</td>
            <td>{{ product.createdAt | date("d/m/Y") }}</td>
            <td>{{ product.barcode}}</td>
            <td>{{ product.quantity}}</td>
            <td>{{ product.favorite}}</td>
            <td>{{ product.archived}}</td>
            <td><button type="button" class="btn btn-primary">Modifier</button>
            </td>
            <td><button type="button" class="btn btn-danger">Supprimer</button>
            </td>


          </tr>
          {% endfor %}
        </tbody>
      </table>
</div>
{% endblock %}
