{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Expiration_date</th>
                <td>{{ product.expirationDate ? product.expirationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Archived_date</th>
                <td>{{ product.archivedDate ? product.archivedDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Elaboration_date</th>
                <td>{{ product.elaborationDate ? product.elaborationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Ingredients</th>
                <td>{{ product.ingredients }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ product.quantity }}</td>
            </tr>
            <tr>
                <th>Nutritional_composition</th>
                <td>{{ product.nutritionalComposition }}</td>
            </tr>
            <tr>
                <th>Favorite</th>
                <td>{{ product.favorite ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Archived</th>
                <td>{{ product.archived ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Expirated</th>
                <td>{{ product.expirated ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
